<% if @exercise_menu.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <strong>入力内容に誤りがあります</strong>
      <ul>
        <% @exercise_menu.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>
<div class="container" style="margin-top: 100px;">
 <div class="row">
  <div class="col-lg-8 mx-auto">
    <%= form_with model: @exercise_menu, url: "/confirmation", method: :post, local: true do |f| %>
    <div class="form-group">
      <label>運動の目的</label>
      <%= f.text_field :exercise_purpose, placeholder: '運動の目的を教えてください', class: "form-control" %>
    </div>
    <div class="form-group">
      <label>運動目標</label>
      <%= f.text_field :exercise_goal, placeholder: '目標を教えてください', class: "form-control" %>
    </div>
    <div class="action">
      <%= f.submit '登録' %>
    </div>
    <% end %>
  </div>
 </div>
</div>

