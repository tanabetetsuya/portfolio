<%= form_with model: @event, url: "/events/#{@event.id}", method: :patch, local: true do |f| %>
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="d-flex justify-content-center">
        <div class="card" style="width: 500px; margin-top: 50px;">
          <div class="card-header">
            <h2>スケジュール作成</h2>
          </div>
          <div class="card-body">
            <div class="card-text">
              <div class="form-group">
                <label>タイトル</label>
                <%= f.text_field :title, class: "form-control" %>
              </div>
              <div class="form-group">
                <label>内容</label>
                <%= f.text_field :body, class: "form-control" %>
              </div>
              <div class="form-group">
                <label>開始時刻</label>
                <%= f.time_select :start_time, class: "form-control" %>
              </div>
              <div class="form-group">
                <label>終了時刻</label>
                <%= f.time_select :end_time, class: "form-control" %>
              </div>
              <div class="actions">
                <%= f.submit '登録', class: "btn btn-success" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>