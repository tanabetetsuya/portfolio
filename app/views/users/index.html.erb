<div class="container">
  <div class="row">
    <table class="table col-lg-8">
      <thead>
        <tr>
          <th>メールアドレス</th>
          <th>コメント</th>
          <th>コメント一覧</th>
          <th>コメント作成</th>
          <th></th>
          <th>いいね</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
           
          <td><%= user.email %></td>
          <td>
            コメント件数:<%= user.comments.count %>
          </td>
          <td>
            <% user.comments.each do |comments| %>
            <%= comments.user.name %>
            <%= comments.created_at.strftime('%Y/%m/%d') %><%= comments.comment %>
            <% end %>
          </td>
          <td class="new-comment">
            <%= form_with(model:[user, @comment],local: true) do |f| %>
            <%= f.text_area :comment, placeholder: "コメントはここに" %>
          </td>
          <td><%= f.submit '送信' %></td>
            <% end %>
           <% if user.liked_by?(current_user) %>
          <td>
            <%= link_to user_likes_path(current_user), method: :delete do %>
            ❤️<%= user.likes.count%>いいね
            <% end %>
            <% else %>
            <%= link_to user_likes_path(current_user), method: :post do %>
            ♡<%= user.likes.count %>いいね
            <% end %>
          </td>
          <% end %>
         
        </tr>
         <% end %>
      </tbody>
    </table>
  </div>
</div>



