<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="d-flex justify-content-center">
        <div class="card" style="width: 500px; margin-top: 50px;">
          <div class="card-header">
            <h2>スケジュール詳細</h2>
          </div>
          <div class="card-body">
            <div class="card-text">
              <label>タイトル</label>
              <p><%= @event.title %></p>
            </div>
            <div class="card-text">
              <label>内容</label>
              <p><%= @event.body %></p>
            </div>
            <div class="card-text">
              <label>開始時刻</label>
              <p><%= @event.start_time %></p>
            </div>
            <div class="card-text">
              <label>終了時刻</label>
              <p><%= @event.end_time %></p>
            </div>
            <div class="card-text">
              <%= link_to '編集', edit_event_path(@event) %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>