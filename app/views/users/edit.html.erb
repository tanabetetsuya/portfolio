<div class="main-container">
  <div class="d-flex justify-content-center">
    <div class="card" style="width: 500px; margin: 50px 0px 50px 0px">
      <div class="card-header">
        <h2>ユーザー編集</h2>
      </div>

      <div class="card-body">
        <%= form_with model: @user, url: "/users/#{current_user.id}", method: :patch, local: true  do |f| %>

        <div class="form-group">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
        </div>


        <div class="actions">
          <%= f.submit "登録", class: "btn btn-success" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>